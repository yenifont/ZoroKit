<UserControl x:Class="ZaraGON.UI.Controls.ServiceControlCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:ZaraGON.UI.Converters">

    <UserControl.Resources>
        <converters:ServiceStatusToColorConverter x:Key="StatusColorConverter" />
    </UserControl.Resources>

    <Border Style="{StaticResource CardStyle}" Width="340">
        <StackPanel>
            <DockPanel Margin="0,0,0,14">
                <Border Width="42" Height="42" CornerRadius="12"
                        Background="{StaticResource PrimaryLightBrush}" Margin="0,0,14,0">
                    <materialDesign:PackIcon Kind="Server" Width="20" Height="20"
                                             Foreground="{StaticResource PrimaryBrush}"
                                             HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Border>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock x:Name="ServiceNameText" Text="Service" FontSize="16" FontWeight="SemiBold"
                               Foreground="{StaticResource PrimaryTextBrush}" />
                    <DockPanel Margin="0,4,0,0">
                        <Ellipse x:Name="StatusIndicator" Width="8" Height="8" Margin="0,0,6,0"
                                 Fill="{Binding Status, Converter={StaticResource StatusColorConverter}}" />
                        <TextBlock x:Name="StatusText" Style="{StaticResource StatusTextStyle}" FontSize="12" />
                    </DockPanel>
                </StackPanel>
            </DockPanel>

            <TextBlock x:Name="VersionText" Style="{StaticResource StatusTextStyle}" Margin="0,0,0,14" />

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="6" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="6" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button x:Name="StartButton" Content="Start" Style="{StaticResource SuccessButtonStyle}"
                        Grid.Column="0" HorizontalAlignment="Stretch" Padding="10,8" />
                <Button x:Name="StopButton" Content="Stop" Style="{StaticResource DangerButtonStyle}"
                        Grid.Column="2" HorizontalAlignment="Stretch" Padding="10,8" />
                <Button x:Name="RestartButton" Content="Restart" Style="{StaticResource ActionButtonStyle}"
                        Grid.Column="4" HorizontalAlignment="Stretch" Padding="10,8" />
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
