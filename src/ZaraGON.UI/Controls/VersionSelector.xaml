<UserControl x:Class="ZaraGON.UI.Controls.VersionSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Style="{StaticResource CardStyle}">
        <StackPanel>
            <TextBlock Text="Version" Style="{StaticResource SectionHeaderStyle}" />
            <ComboBox x:Name="VersionCombo"
                      Background="{StaticResource InputBackgroundBrush}" Foreground="{StaticResource PrimaryTextBrush}"
                      BorderBrush="{StaticResource BorderBrush}"
                      Padding="8,6" FontSize="13" />
        </StackPanel>
    </Border>
</UserControl>
