<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options">

    <!-- Clean Dashboard Theme - Packing App Inspired -->

    <!-- Brand / Primary Colors - Bright vivid blue -->
    <Color x:Key="PrimaryColor">#1A8CFF</Color>
    <Color x:Key="PrimaryDarkColor">#0070E0</Color>
    <Color x:Key="PrimaryLightColor">#E8F4FF</Color>
    <Color x:Key="PrimaryHoverColor">#0062CC</Color>
    <Color x:Key="AccentColor">#1A8CFF</Color>

    <!-- Status Colors -->
    <Color x:Key="SuccessColor">#22C55E</Color>
    <Color x:Key="SuccessHoverColor">#16A34A</Color>
    <Color x:Key="SuccessLightColor">#F0FDF4</Color>
    <Color x:Key="WarningColor">#F59E0B</Color>
    <Color x:Key="WarningHoverColor">#D97706</Color>
    <Color x:Key="WarningLightColor">#FFFBEB</Color>
    <Color x:Key="ErrorColor">#EF4444</Color>
    <Color x:Key="ErrorHoverColor">#DC2626</Color>
    <Color x:Key="ErrorLightColor">#FEF2F2</Color>
    <Color x:Key="InfoColor">#1A8CFF</Color>
    <Color x:Key="StoppedColor">#94A3B8</Color>

    <!-- Background Colors -->
    <Color x:Key="SidebarBackgroundColor">#FFFFFF</Color>
    <Color x:Key="ContentBackgroundColor">#F5F7FA</Color>
    <Color x:Key="CardBackgroundColor">#FFFFFF</Color>
    <Color x:Key="CardHoverColor">#F8FAFC</Color>
    <Color x:Key="InputBackgroundColor">#F5F7FA</Color>
    <Color x:Key="BorderColor">#E8ECF1</Color>
    <Color x:Key="BorderFocusColor">#1A8CFF</Color>

    <!-- Sidebar-specific -->
    <Color x:Key="NavActiveBackgroundColor">#F0F7FF</Color>
    <Color x:Key="NavActiveTextColor">#1A8CFF</Color>
    <Color x:Key="NavHoverBackgroundColor">#F5F7FA</Color>

    <!-- Text Colors -->
    <Color x:Key="PrimaryTextColor">#1A1D26</Color>
    <Color x:Key="SecondaryTextColor">#6B7280</Color>
    <Color x:Key="DisabledTextColor">#C8CDD5</Color>
    <Color x:Key="MutedTextColor">#9CA3AF</Color>

    <!-- Shadow Color -->
    <Color x:Key="ShadowColor">#08000000</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" po:Freeze="True" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="PrimaryDarkBrush" po:Freeze="True" Color="{StaticResource PrimaryDarkColor}" />
    <SolidColorBrush x:Key="PrimaryLightBrush" po:Freeze="True" Color="{StaticResource PrimaryLightColor}" />
    <SolidColorBrush x:Key="PrimaryHoverBrush" po:Freeze="True" Color="{StaticResource PrimaryHoverColor}" />
    <SolidColorBrush x:Key="AccentBrush" po:Freeze="True" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="SuccessBrush" po:Freeze="True" Color="{StaticResource SuccessColor}" />
    <SolidColorBrush x:Key="SuccessHoverBrush" po:Freeze="True" Color="{StaticResource SuccessHoverColor}" />
    <SolidColorBrush x:Key="SuccessLightBrush" po:Freeze="True" Color="{StaticResource SuccessLightColor}" />
    <SolidColorBrush x:Key="WarningBrush" po:Freeze="True" Color="{StaticResource WarningColor}" />
    <SolidColorBrush x:Key="WarningHoverBrush" po:Freeze="True" Color="{StaticResource WarningHoverColor}" />
    <SolidColorBrush x:Key="WarningLightBrush" po:Freeze="True" Color="{StaticResource WarningLightColor}" />
    <SolidColorBrush x:Key="ErrorBrush" po:Freeze="True" Color="{StaticResource ErrorColor}" />
    <SolidColorBrush x:Key="ErrorHoverBrush" po:Freeze="True" Color="{StaticResource ErrorHoverColor}" />
    <SolidColorBrush x:Key="ErrorLightBrush" po:Freeze="True" Color="{StaticResource ErrorLightColor}" />
    <SolidColorBrush x:Key="InfoBrush" po:Freeze="True" Color="{StaticResource InfoColor}" />
    <SolidColorBrush x:Key="StoppedBrush" po:Freeze="True" Color="{StaticResource StoppedColor}" />
    <SolidColorBrush x:Key="SidebarBackgroundBrush" po:Freeze="True" Color="{StaticResource SidebarBackgroundColor}" />
    <SolidColorBrush x:Key="ContentBackgroundBrush" po:Freeze="True" Color="{StaticResource ContentBackgroundColor}" />
    <SolidColorBrush x:Key="CardBackgroundBrush" po:Freeze="True" Color="{StaticResource CardBackgroundColor}" />
    <SolidColorBrush x:Key="CardHoverBrush" po:Freeze="True" Color="{StaticResource CardHoverColor}" />
    <SolidColorBrush x:Key="InputBackgroundBrush" po:Freeze="True" Color="{StaticResource InputBackgroundColor}" />
    <SolidColorBrush x:Key="BorderBrush" po:Freeze="True" Color="{StaticResource BorderColor}" />
    <SolidColorBrush x:Key="BorderFocusBrush" po:Freeze="True" Color="{StaticResource BorderFocusColor}" />
    <SolidColorBrush x:Key="PrimaryTextBrush" po:Freeze="True" Color="{StaticResource PrimaryTextColor}" />
    <SolidColorBrush x:Key="SecondaryTextBrush" po:Freeze="True" Color="{StaticResource SecondaryTextColor}" />
    <SolidColorBrush x:Key="DisabledTextBrush" po:Freeze="True" Color="{StaticResource DisabledTextColor}" />
    <SolidColorBrush x:Key="MutedTextBrush" po:Freeze="True" Color="{StaticResource MutedTextColor}" />
    <SolidColorBrush x:Key="NavActiveBackgroundBrush" po:Freeze="True" Color="{StaticResource NavActiveBackgroundColor}" />
    <SolidColorBrush x:Key="NavActiveTextBrush" po:Freeze="True" Color="{StaticResource NavActiveTextColor}" />
    <SolidColorBrush x:Key="NavHoverBackgroundBrush" po:Freeze="True" Color="{StaticResource NavHoverBackgroundColor}" />

</ResourceDictionary>
