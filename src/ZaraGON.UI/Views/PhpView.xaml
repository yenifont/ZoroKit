<UserControl x:Class="ZaraGON.UI.Views.PhpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0">
        <StackPanel Margin="24,20,24,24">
            <!-- Page Header -->
            <TextBlock Text="PHP" Style="{StaticResource PageTitleStyle}" />
            <TextBlock Text="PHP s&#252;r&#252;m y&#246;netimi ve yap&#305;land&#305;rmas&#305;" Style="{StaticResource PageSubtitleStyle}" />

            <!-- Active Version -->
            <Border Style="{StaticResource CardStyle}" Padding="14,12">
                <DockPanel>
                    <!-- Right: Active badge -->
                    <Border Background="#F0F0FF" CornerRadius="6" Padding="10,4"
                            DockPanel.Dock="Right" VerticalAlignment="Center" Margin="12,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="6" Height="6" Fill="#6366F1" Margin="0,0,6,0" VerticalAlignment="Center" />
                            <TextBlock Text="Aktif" FontSize="10.5" FontWeight="Medium" Foreground="#6366F1" />
                        </StackPanel>
                    </Border>
                    <!-- Left: Icon + Info -->
                    <Border Width="40" Height="40" CornerRadius="11"
                            Background="#F0F0FF" Margin="0,0,14,0" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="LanguagePhp" Width="20" Height="20"
                                                 Foreground="#6366F1"
                                                 HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="{Binding ActiveVersion, StringFormat='PHP {0}'}" FontSize="14" FontWeight="SemiBold"
                                   Foreground="{StaticResource PrimaryTextBrush}" />
                        <TextBlock Text="Apache mod &#183; Thread Safe x64" FontSize="11.5"
                                   Foreground="{StaticResource MutedTextBrush}" Margin="0,2,0,0" />
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- Quick Actions -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                <Button Style="{StaticResource GhostButtonStyle}" Command="{Binding OpenPhpIniCommand}"
                        Padding="10,5" FontSize="11.5" Margin="0,0,6,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FileEditOutline" Width="13" Height="13" Margin="0,0,5,0" VerticalAlignment="Center" />
                        <TextBlock Text="php.ini" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource GhostButtonStyle}" Command="{Binding RunComposerInstallCommand}"
                        Padding="10,5" FontSize="11.5" Margin="0,0,6,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="PackageDown" Width="13" Height="13" Margin="0,0,5,0" VerticalAlignment="Center" />
                        <TextBlock Text="Composer Install" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource GhostButtonStyle}" Command="{Binding ResetPhpSettingsCommand}"
                        Padding="10,5" FontSize="11.5">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Restore" Width="13" Height="13" Margin="0,0,5,0" VerticalAlignment="Center" />
                        <TextBlock Text="Varsay&#305;lana S&#305;f&#305;rla" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- PHP Settings -->
            <Border Style="{StaticResource CardStyle}" Padding="14,12">
                <StackPanel>
                    <DockPanel Margin="0,0,0,12">
                        <materialDesign:PackIcon Kind="Tune" Width="15" Height="15"
                                                 Foreground="#6366F1" Margin="0,0,8,0" VerticalAlignment="Center" />
                        <TextBlock Text="PHP Ayarlar&#305;" FontSize="13" FontWeight="SemiBold"
                                   Foreground="{StaticResource PrimaryTextBrush}" VerticalAlignment="Center" />
                        <Button DockPanel.Dock="Right" HorizontalAlignment="Right"
                                Command="{Binding SavePhpSettingsCommand}" Cursor="Hand"
                                IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"
                                Background="Transparent" BorderThickness="0" Padding="0">
                            <TextBlock Text="Kaydet" FontSize="11.5" FontWeight="Medium"
                                       Foreground="{StaticResource PrimaryBrush}" />
                        </Button>
                    </DockPanel>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- Row 0 -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,8">
                            <TextBlock Text="memory_limit" FontSize="10" Foreground="{StaticResource MutedTextBrush}" Margin="2,0,0,3" />
                            <Grid>
                                <TextBox Text="{Binding PhpMemoryLimit, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource InputTextBoxStyle}" FontSize="11.5" Padding="8,5,26,5" BorderThickness="0" />
                                <materialDesign:PackIcon Kind="InformationOutline" Width="12" Height="12" Cursor="Help"
                                                         Foreground="{StaticResource MutedTextBrush}"
                                                         HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,7,0"
                                                         ToolTip="PHP'nin kullanabilece&#287;i maksimum bellek. &#214;rn: 128M, 256M" />
                            </Grid>
                        </StackPanel>
                        <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,8">
                            <TextBlock Text="upload_max_filesize" FontSize="10" Foreground="{StaticResource MutedTextBrush}" Margin="2,0,0,3" />
                            <Grid>
                                <TextBox Text="{Binding PhpUploadMaxFilesize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource InputTextBoxStyle}" FontSize="11.5" Padding="8,5,26,5" BorderThickness="0" />
                                <materialDesign:PackIcon Kind="InformationOutline" Width="12" Height="12" Cursor="Help"
                                                         Foreground="{StaticResource MutedTextBrush}"
                                                         HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,7,0"
                                                         ToolTip="Tek dosya y&#252;kleme limiti. &#214;rn: 64M, 128M" />
                            </Grid>
                        </StackPanel>

                        <!-- Row 1 -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,8">
                            <TextBlock Text="post_max_size" FontSize="10" Foreground="{StaticResource MutedTextBrush}" Margin="2,0,0,3" />
                            <Grid>
                                <TextBox Text="{Binding PhpPostMaxSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource InputTextBoxStyle}" FontSize="11.5" Padding="8,5,26,5" BorderThickness="0" />
                                <materialDesign:PackIcon Kind="InformationOutline" Width="12" Height="12" Cursor="Help"
                                                         Foreground="{StaticResource MutedTextBrush}"
                                                         HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,7,0"
                                                         ToolTip="POST iste&#287;i maksimum boyutu. upload_max_filesize'dan b&#252;y&#252;k olmal&#305;." />
                            </Grid>
                        </StackPanel>
                        <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,0,8">
                            <TextBlock Text="max_execution_time" FontSize="10" Foreground="{StaticResource MutedTextBrush}" Margin="2,0,0,3" />
                            <Grid>
                                <TextBox Text="{Binding PhpMaxExecutionTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource InputTextBoxStyle}" FontSize="11.5" Padding="8,5,26,5" BorderThickness="0" />
                                <materialDesign:PackIcon Kind="InformationOutline" Width="12" Height="12" Cursor="Help"
                                                         Foreground="{StaticResource MutedTextBrush}"
                                                         HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,7,0"
                                                         ToolTip="Script &#231;al&#305;&#351;ma s&#252;resi (saniye). &#214;rn: 30, 120, 300" />
                            </Grid>
                        </StackPanel>

                        <!-- Row 2 -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,0,8">
                            <TextBlock Text="max_input_time" FontSize="10" Foreground="{StaticResource MutedTextBrush}" Margin="2,0,0,3" />
                            <Grid>
                                <TextBox Text="{Binding PhpMaxInputTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource InputTextBoxStyle}" FontSize="11.5" Padding="8,5,26,5" BorderThickness="0" />
                                <materialDesign:PackIcon Kind="InformationOutline" Width="12" Height="12" Cursor="Help"
                                                         Foreground="{StaticResource MutedTextBrush}"
                                                         HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,7,0"
                                                         ToolTip="Giri&#351; verisi ayr&#305;&#351;t&#305;rma s&#252;resi (saniye). -1 = s&#305;n&#305;rs&#305;z." />
                            </Grid>
                        </StackPanel>
                        <StackPanel Grid.Row="2" Grid.Column="2" Margin="0,0,0,8">
                            <TextBlock Text="max_file_uploads" FontSize="10" Foreground="{StaticResource MutedTextBrush}" Margin="2,0,0,3" />
                            <Grid>
                                <TextBox Text="{Binding PhpMaxFileUploads, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource InputTextBoxStyle}" FontSize="11.5" Padding="8,5,26,5" BorderThickness="0" />
                                <materialDesign:PackIcon Kind="InformationOutline" Width="12" Height="12" Cursor="Help"
                                                         Foreground="{StaticResource MutedTextBrush}"
                                                         HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,7,0"
                                                         ToolTip="Ayn&#305; anda y&#252;klenebilecek dosya say&#305;s&#305;. &#214;rn: 20, 50" />
                            </Grid>
                        </StackPanel>

                        <!-- Row 3 -->
                        <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,0,8">
                            <TextBlock Text="max_input_vars" FontSize="10" Foreground="{StaticResource MutedTextBrush}" Margin="2,0,0,3" />
                            <Grid>
                                <TextBox Text="{Binding PhpMaxInputVars, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource InputTextBoxStyle}" FontSize="11.5" Padding="8,5,26,5" BorderThickness="0" />
                                <materialDesign:PackIcon Kind="InformationOutline" Width="12" Height="12" Cursor="Help"
                                                         Foreground="{StaticResource MutedTextBrush}"
                                                         HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,7,0"
                                                         ToolTip="Maksimum giri&#351; de&#287;i&#351;keni say&#305;s&#305;. &#214;rn: 1000, 3000" />
                            </Grid>
                        </StackPanel>
                        <StackPanel Grid.Row="3" Grid.Column="2" Margin="0,0,0,8">
                            <TextBlock Text="display_errors" FontSize="10" Foreground="{StaticResource MutedTextBrush}" Margin="2,0,0,3" />
                            <CheckBox IsChecked="{Binding PhpDisplayErrors, Mode=TwoWay}" Content="On"
                                      Margin="0,2,0,0" FontSize="11.5"
                                      ToolTip="Hatalar&#305;n taray&#305;c&#305;da g&#246;r&#252;nt&#252;lenmesi. Geli&#351;tirme i&#231;in a&#231;&#305;k olmal&#305;." />
                        </StackPanel>

                        <!-- Row 4 -->
                        <StackPanel Grid.Row="4" Grid.Column="0" Margin="0,0,0,4">
                            <TextBlock Text="error_reporting" FontSize="10" Foreground="{StaticResource MutedTextBrush}" Margin="2,0,0,3" />
                            <Grid>
                                <TextBox Text="{Binding PhpErrorReporting, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource InputTextBoxStyle}" FontSize="11.5" Padding="8,5,26,5" BorderThickness="0" />
                                <materialDesign:PackIcon Kind="InformationOutline" Width="12" Height="12" Cursor="Help"
                                                         Foreground="{StaticResource MutedTextBrush}"
                                                         HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,7,0"
                                                         ToolTip="Raporlanacak hata t&#252;rleri. &#214;rn: E_ALL" />
                            </Grid>
                        </StackPanel>
                        <StackPanel Grid.Row="4" Grid.Column="2" Margin="0,0,0,4">
                            <TextBlock Text="date.timezone" FontSize="10" Foreground="{StaticResource MutedTextBrush}" Margin="2,0,0,3" />
                            <Grid>
                                <TextBox Text="{Binding PhpDateTimezone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource InputTextBoxStyle}" FontSize="11.5" Padding="8,5,26,5" BorderThickness="0" />
                                <materialDesign:PackIcon Kind="InformationOutline" Width="12" Height="12" Cursor="Help"
                                                         Foreground="{StaticResource MutedTextBrush}"
                                                         HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,7,0"
                                                         ToolTip="Varsay&#305;lan saat dilimi. &#214;rn: Europe/Istanbul" />
                            </Grid>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Extensions -->
            <Border Style="{StaticResource CardStyle}" Padding="14,12">
                <StackPanel>
                    <DockPanel Margin="0,0,0,10">
                        <materialDesign:PackIcon Kind="Puzzle" Width="15" Height="15"
                                                 Foreground="#6366F1" Margin="0,0,8,0" VerticalAlignment="Center" />
                        <TextBlock Text="Eklentiler" FontSize="13" FontWeight="SemiBold"
                                   Foreground="{StaticResource PrimaryTextBrush}" VerticalAlignment="Center" />
                    </DockPanel>
                    <ItemsControl ItemsSource="{Binding Extensions}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource InputBackgroundBrush}"
                                        CornerRadius="6" Padding="7,4" Margin="2">
                                    <DockPanel>
                                        <CheckBox IsChecked="{Binding IsEnabled, Mode=OneWay}"
                                                  Command="{Binding DataContext.ToggleExtensionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                  CommandParameter="{Binding}"
                                                  VerticalAlignment="Center" Margin="0,0,5,0" />
                                        <TextBlock Text="{Binding Name}" Foreground="{StaticResource PrimaryTextBrush}"
                                                   VerticalAlignment="Center" FontSize="11.5" />
                                    </DockPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Installed Versions -->
            <Border Style="{StaticResource CardStyle}" Padding="14,12">
                <StackPanel>
                    <DockPanel Margin="0,0,0,10">
                        <materialDesign:PackIcon Kind="PackageVariantClosed" Width="15" Height="15"
                                                 Foreground="#6366F1" Margin="0,0,8,0" VerticalAlignment="Center" />
                        <TextBlock Text="Y&#252;kl&#252; S&#252;r&#252;mler" FontSize="13" FontWeight="SemiBold"
                                   Foreground="{StaticResource PrimaryTextBrush}" VerticalAlignment="Center" />
                    </DockPanel>
                    <ItemsControl ItemsSource="{Binding InstalledVersions}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource InputBackgroundBrush}" CornerRadius="8"
                                        Padding="12,8" Margin="0,2">
                                    <DockPanel>
                                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center" Margin="8,0,0,0">
                                            <!-- Sil button (hidden for active version) -->
                                            <Button Style="{StaticResource DangerButtonStyle}"
                                                    Command="{Binding DataContext.DeleteVersionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}" Padding="10,4" FontSize="11" Margin="0,0,6,0">
                                                <Button.Visibility>
                                                    <Binding Path="IsActive" Converter="{StaticResource InverseBoolToVisibilityConverter}" />
                                                </Button.Visibility>
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="DeleteOutline" Width="13" Height="13" Margin="0,0,4,0" VerticalAlignment="Center" />
                                                    <TextBlock Text="Sil" VerticalAlignment="Center" />
                                                </StackPanel>
                                            </Button>
                                            <Button Style="{StaticResource SoftButtonStyle}" Padding="12,4" FontSize="11"
                                                    Command="{Binding DataContext.SwitchVersionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}">
                                                <TextBlock Text="Ge&#231;i&#351; Yap" />
                                            </Button>
                                        </StackPanel>
                                        <StackPanel VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Version}" Foreground="{StaticResource PrimaryTextBrush}"
                                                           FontWeight="SemiBold" FontSize="12.5" />
                                                <Border Margin="8,0,0,0" CornerRadius="4" Padding="6,1" VerticalAlignment="Center"
                                                        Visibility="{Binding IsActive, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Background" Value="{StaticResource SuccessLightBrush}" />
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock Text="Aktif" FontSize="9.5" FontWeight="Medium" Foreground="{StaticResource SuccessBrush}" />
                                                </Border>
                                            </StackPanel>
                                            <TextBlock Foreground="{StaticResource MutedTextBrush}" FontSize="10.5" Margin="0,2,0,0">
                                                <Run Text="{Binding VsVersion, Mode=OneWay}" />
                                                <Run Text=" &#183; Thread Safe x64" />
                                            </TextBlock>
                                        </StackPanel>
                                    </DockPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Available Versions -->
            <Border Style="{StaticResource CardStyle}" Padding="14,12">
                <StackPanel>
                    <DockPanel Margin="0,0,0,10">
                        <materialDesign:PackIcon Kind="CloudDownload" Width="15" Height="15"
                                                 Foreground="#6366F1" Margin="0,0,8,0" VerticalAlignment="Center" />
                        <TextBlock Text="Kullan&#305;labilir S&#252;r&#252;mler" FontSize="13" FontWeight="SemiBold"
                                   Foreground="{StaticResource PrimaryTextBrush}" VerticalAlignment="Center" />
                        <Button DockPanel.Dock="Right" HorizontalAlignment="Right"
                                Command="{Binding FetchAvailableVersionsCommand}"
                                IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"
                                Background="Transparent" BorderThickness="0" Padding="0" Cursor="Hand">
                            <TextBlock Text="S&#252;r&#252;mleri Getir" FontSize="11.5" FontWeight="Medium"
                                       Foreground="#6366F1" />
                        </Button>
                    </DockPanel>
                    <ItemsControl ItemsSource="{Binding AvailableVersions}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource InputBackgroundBrush}" CornerRadius="8"
                                        Padding="12,8" Margin="0,2">
                                    <DockPanel>
                                        <!-- İndir button (hidden when installed) -->
                                        <Button Content="&#304;ndir" Style="{StaticResource SuccessButtonStyle}"
                                                Command="{Binding DataContext.DownloadVersionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}" DockPanel.Dock="Right"
                                                Padding="12,4" FontSize="11">
                                            <Button.Visibility>
                                                <Binding Path="IsInstalled" Converter="{StaticResource InverseBoolToVisibilityConverter}" />
                                            </Button.Visibility>
                                        </Button>
                                        <!-- Yüklü badge (shown when installed) -->
                                        <Border DockPanel.Dock="Right" CornerRadius="6" Padding="10,4"
                                                Background="{StaticResource SuccessLightBrush}" VerticalAlignment="Center"
                                                Visibility="{Binding IsInstalled, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="Check" Width="12" Height="12"
                                                                         Foreground="{StaticResource SuccessBrush}"
                                                                         VerticalAlignment="Center" Margin="0,0,4,0" />
                                                <TextBlock Text="Y&#252;kl&#252;" FontSize="10.5" FontWeight="Medium"
                                                           Foreground="{StaticResource SuccessBrush}" VerticalAlignment="Center" />
                                            </StackPanel>
                                        </Border>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Version}" Foreground="{StaticResource PrimaryTextBrush}"
                                                       FontWeight="SemiBold" FontSize="12.5" />
                                            <TextBlock Foreground="{StaticResource MutedTextBrush}" FontSize="10.5" Margin="0,2,0,0">
                                                <Run Text="TS x64 &#183; " />
                                                <Run Text="{Binding VsVersion, Mode=OneWay}" />
                                            </TextBlock>
                                        </StackPanel>
                                    </DockPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Download Progress -->
            <Border Style="{StaticResource CardStyle}" Padding="14,10"
                    Visibility="{Binding IsDownloading, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel>
                    <TextBlock Text="{Binding DownloadStatus}" Foreground="{StaticResource PrimaryTextBrush}"
                               FontSize="12" FontWeight="Medium" />
                    <ProgressBar Value="{Binding DownloadProgress}" Maximum="100" Height="6" Margin="0,8,0,0"
                                 Background="{StaticResource InputBackgroundBrush}" Foreground="#6366F1" />
                </StackPanel>
            </Border>

            <!-- Status Message -->
            <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource MutedTextBrush}"
                       Margin="2,2,0,0" FontSize="11.5" />
        </StackPanel>
    </ScrollViewer>
</UserControl>
