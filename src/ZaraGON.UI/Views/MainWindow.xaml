<Window x:Class="ZaraGON.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:ZaraGON.UI.Views"
        xmlns:vm="clr-namespace:ZaraGON.UI.ViewModels"
        xmlns:converters="clr-namespace:ZaraGON.UI.Converters"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="ZaraGON"
        Icon="/Resources/app.png"
        Height="750" Width="1100"
        MinHeight="550" MinWidth="800"
        MaxHeight="{Binding Source={x:Static SystemParameters.WorkArea}, Path=Height}"
        MaxWidth="{Binding Source={x:Static SystemParameters.WorkArea}, Path=Width}"
        WindowStartupLocation="CenterScreen"
        SizeToContent="Manual"
        Background="{StaticResource ContentBackgroundBrush}">

    <Window.Resources>
        <converters:ToastTypeToBackgroundConverter x:Key="ToastBgConverter" />
        <converters:ToastTypeToIconForegroundConverter x:Key="ToastIconConverter" />
        <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
            <views:DashboardView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ApacheViewModel}">
            <views:ApacheView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:PhpViewModel}">
            <views:PhpView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
            <views:SettingsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:HostsFileViewModel}">
            <views:HostsFileView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:LogViewModel}">
            <views:LogView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:UpdatesViewModel}">
            <views:UpdatesView />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="210" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Sidebar - Clean white like Packing app -->
        <Border Grid.Column="0" Background="{StaticResource SidebarBackgroundBrush}"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0">
            <DockPanel>
                <!-- App Logo/Title -->
                <Border DockPanel.Dock="Top" Padding="18,18,18,14">
                    <DockPanel>
                        <Border Width="32" Height="32" CornerRadius="8"
                                Background="{StaticResource PrimaryBrush}" Margin="0,0,10,0">
                            <Viewbox Width="20" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Canvas Width="256" Height="256">
                                    <Path Fill="White"
                                          Data="M50.455 102.855c0 25.177 39.647 105.629 77.265 105.629h.001c37.619 0 77.397-76.894 77.397-108.531 0-20.003-18.606-52.373-77.62-52.373-59.013 0-77.043 35.758-77.043 55.275zm50.039 5.634C86.402 93.277 77.656 77.857 77.656 77.857s14.41-7.175 23.824-9.091c.802-.163 1.62-.338 2.458-.516 8.997-1.916 20.189-4.298 36.328 1.496 33.579 12.056 47.896 34.606 47.896 34.606s-21.609-17.401-45.404-20.895c-13.707-2.013-39.203 6.152-39.203 6.152s8.862 9.38 16.075 23.114c1.137 2.165 2.245 4.147 3.306 6.045 5.668 10.137 9.974 17.838 9.974 37.93 0 14.659-11.08 36.443-11.08 36.443s6.223-28.383 1.204-50.825c-3.627-16.223-6.425-18.719-13.02-24.603-2.528-2.255-5.615-5.008-9.52-9.224z" />
                                </Canvas>
                            </Viewbox>
                        </Border>
                        <TextBlock Text="ZaraGON" FontSize="17" FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryTextBrush}" VerticalAlignment="Center" />
                    </DockPanel>
                </Border>

                <!-- Port Monitor Widget -->
                <Border DockPanel.Dock="Bottom" Padding="14,10,14,14"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0">
                    <StackPanel>
                        <TextBlock Text="PORTS" FontSize="10" Foreground="{StaticResource MutedTextBrush}"
                                   FontWeight="Bold" Margin="4,0,0,6" />
                        <ItemsControl ItemsSource="{Binding Ports}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,2" Height="22">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Port number -->
                                        <TextBlock Grid.Column="0" VerticalAlignment="Center"
                                                   FontSize="11" FontFamily="Consolas"
                                                   Foreground="{StaticResource SecondaryTextBrush}"
                                                   Margin="4,0,6,0">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat=":{0}">
                                                    <Binding Path="Port" />
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>

                                        <!-- Status dot -->
                                        <Ellipse Grid.Column="1" Width="7" Height="7"
                                                 VerticalAlignment="Center" Margin="0,0,6,0">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Setter Property="Fill" Value="{StaticResource StoppedBrush}" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsInUse}" Value="True">
                                                            <Setter Property="Fill" Value="{StaticResource SuccessBrush}" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>

                                        <!-- Process name or "boş" -->
                                        <TextBlock Grid.Column="2" VerticalAlignment="Center"
                                                   FontSize="11" TextTrimming="CharacterEllipsis">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="boş" />
                                                    <Setter Property="Foreground" Value="{StaticResource MutedTextBrush}" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsInUse}" Value="True">
                                                            <Setter Property="Text" Value="{Binding ProcessName}" />
                                                            <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <!-- Kill button -->
                                        <Button Grid.Column="3" VerticalAlignment="Center"
                                                Content="✕" FontSize="10" Cursor="Hand"
                                                Padding="4,1" MinWidth="0" MinHeight="0"
                                                Background="Transparent" BorderThickness="0"
                                                Foreground="{StaticResource ErrorBrush}"
                                                ToolTip="Process'i sonlandır"
                                                Command="{Binding DataContext.KillPortCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding Port}">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding CanKill}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Navigation -->
                <ScrollViewer DockPanel.Dock="Top" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Dashboard -->
                        <Button Style="{StaticResource NavButtonStyle}"
                                Command="{Binding NavigateToCommand}" CommandParameter="Dashboard">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ViewDashboard" Width="17" Height="17"
                                                         VerticalAlignment="Center" Margin="0,0,10,0" />
                                <TextBlock Text="Dashboard" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>

                        <!-- Services -->
                        <TextBlock Text="SERVICES" FontSize="10" Foreground="{StaticResource MutedTextBrush}"
                                   Margin="20,18,0,6" FontWeight="Bold" />
                        <Button Style="{StaticResource NavButtonStyle}"
                                Command="{Binding NavigateToCommand}" CommandParameter="Apache">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Server" Width="17" Height="17"
                                                         VerticalAlignment="Center" Margin="0,0,10,0" />
                                <TextBlock Text="Apache" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource NavButtonStyle}"
                                Command="{Binding NavigateToCommand}" CommandParameter="PHP">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="LanguagePhp" Width="17" Height="17"
                                                         VerticalAlignment="Center" Margin="0,0,10,0" />
                                <TextBlock Text="PHP" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>

                        <!-- Tools -->
                        <TextBlock Text="TOOLS" FontSize="10" Foreground="{StaticResource MutedTextBrush}"
                                   Margin="20,18,0,6" FontWeight="Bold" />
                        <Button Style="{StaticResource NavButtonStyle}"
                                Command="{Binding NavigateToCommand}" CommandParameter="HostsFile">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FileDocument" Width="17" Height="17"
                                                         VerticalAlignment="Center" Margin="0,0,10,0" />
                                <TextBlock Text="Hosts File" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource NavButtonStyle}"
                                Command="{Binding NavigateToCommand}" CommandParameter="Logs">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="TextBoxSearch" Width="17" Height="17"
                                                         VerticalAlignment="Center" Margin="0,0,10,0" />
                                <TextBlock Text="Log Viewer" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource NavButtonStyle}"
                                Command="{Binding NavigateToCommand}" CommandParameter="Updates">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Update" Width="17" Height="17"
                                                         VerticalAlignment="Center" Margin="0,0,10,0" />
                                <TextBlock Text="Updates" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>

                        <!-- System -->
                        <TextBlock Text="SYSTEM" FontSize="10" Foreground="{StaticResource MutedTextBrush}"
                                   Margin="20,18,0,6" FontWeight="Bold" />
                        <Button Style="{StaticResource NavButtonStyle}"
                                Command="{Binding NavigateToCommand}" CommandParameter="Settings">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Cog" Width="17" Height="17"
                                                         VerticalAlignment="Center" Margin="0,0,10,0" />
                                <TextBlock Text="Settings" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </DockPanel>
        </Border>

        <!-- Content Area -->
        <Border Grid.Column="1" Margin="0">
            <ContentControl Content="{Binding Navigation.CurrentViewModel}" />
        </Border>

        <!-- Toast Notifications Overlay -->
        <ItemsControl Grid.Column="0" Grid.ColumnSpan="2" Panel.ZIndex="9999"
                      x:Name="ToastContainer"
                      VerticalAlignment="Bottom" HorizontalAlignment="Right"
                      Margin="0,0,20,20" IsHitTestVisible="False">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Margin="0,4,0,0"
                            Background="{Binding Type, Converter={StaticResource ToastBgConverter}}"
                            CornerRadius="10" Padding="14,10,18,10"
                            MinWidth="280" MaxWidth="400">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="16" ShadowDepth="3" Opacity="0.35" Color="#000000" />
                        </Border.Effect>
                        <DockPanel>
                            <materialDesign:PackIcon Kind="{Binding IconKind}" Width="18" Height="18"
                                                     Foreground="{Binding Type, Converter={StaticResource ToastIconConverter}}"
                                                     VerticalAlignment="Center" Margin="0,0,10,0" />
                            <TextBlock Text="{Binding Message}" Foreground="#FFFFFF"
                                       FontSize="12.5" FontWeight="Medium"
                                       VerticalAlignment="Center" TextWrapping="Wrap" />
                        </DockPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Window>
