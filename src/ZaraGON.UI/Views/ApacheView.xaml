<UserControl x:Class="ZaraGON.UI.Views.ApacheView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:ZaraGON.UI.Converters">

    <UserControl.Resources>
        <converters:ServiceStatusToColorConverter x:Key="StatusColorConverter" />
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0">
        <StackPanel Margin="24,20,24,24">
            <!-- Page Header -->
            <TextBlock Text="Apache" Style="{StaticResource PageTitleStyle}" />
            <TextBlock Text="Apache HTTP Server y&#246;netimi" Style="{StaticResource PageSubtitleStyle}" />

            <!-- Service Status -->
            <Border Style="{StaticResource CardStyle}" Padding="14,12">
                <DockPanel>
                    <!-- Right: Start / Stop -->
                    <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center" Margin="12,0,0,0">
                        <Button Content="Ba&#351;lat" Style="{StaticResource SuccessButtonStyle}"
                                Command="{Binding StartCommand}" IsEnabled="{Binding CanStart}"
                                Padding="14,5" FontSize="11.5" Margin="0,0,6,0" />
                        <Button Content="Durdur" Style="{StaticResource DangerButtonStyle}"
                                Command="{Binding StopCommand}" IsEnabled="{Binding CanStop}"
                                Padding="14,5" FontSize="11.5" />
                    </StackPanel>
                    <!-- Left: Icon + Info -->
                    <Border Width="40" Height="40" CornerRadius="11"
                            Background="{StaticResource PrimaryLightBrush}" Margin="0,0,14,0"
                            VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="Server" Width="20" Height="20"
                                                 Foreground="{StaticResource PrimaryBrush}"
                                                 HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Apache HTTP Server" FontSize="14" FontWeight="SemiBold"
                                       Foreground="{StaticResource PrimaryTextBrush}" />
                            <Ellipse Width="9" Height="9" Margin="8,0,0,0"
                                     Fill="{Binding Status, Converter={StaticResource StatusColorConverter}}"
                                     VerticalAlignment="Center" />
                        </StackPanel>
                        <TextBlock FontSize="11.5" Foreground="{StaticResource MutedTextBrush}" Margin="0,2,0,0">
                            <Run Text="v" /><Run Text="{Binding ActiveVersion, Mode=OneWay}" />
                            <Run Text=" &#183; Port " /><Run Text="{Binding Port, Mode=OneWay}" />
                        </TextBlock>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- Quick Actions -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                <Button Style="{StaticResource GhostButtonStyle}" Command="{Binding RestartCommand}"
                        IsEnabled="{Binding CanRestart}" Padding="10,5" FontSize="11.5" Margin="0,0,6,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Restart" Width="13" Height="13" Margin="0,0,5,0" VerticalAlignment="Center" />
                        <TextBlock Text="Yeniden Ba&#351;lat" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource GhostButtonStyle}" Command="{Binding ValidateConfigCommand}"
                        Padding="10,5" FontSize="11.5" Margin="0,0,6,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="CheckCircleOutline" Width="13" Height="13" Margin="0,0,5,0" VerticalAlignment="Center" />
                        <TextBlock Text="Yap&#305;land&#305;rmay&#305; Do&#287;rula" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource GhostButtonStyle}" Command="{Binding OpenHttpdConfCommand}"
                        Padding="10,5" FontSize="11.5">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FileEditOutline" Width="13" Height="13" Margin="0,0,5,0" VerticalAlignment="Center" />
                        <TextBlock Text="httpd.conf" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Config Validation Result -->
            <TextBlock Text="{Binding ConfigValidationResult}" Foreground="{StaticResource SecondaryTextBrush}"
                       Margin="2,0,0,4" FontSize="11.5" />

            <!-- Port Configuration -->
            <Border Style="{StaticResource CardStyle}" Padding="14,10">
                <DockPanel>
                    <materialDesign:PackIcon Kind="Ethernet" Width="15" Height="15"
                                             Foreground="{StaticResource PrimaryBrush}" Margin="0,0,8,0"
                                             VerticalAlignment="Center" />
                    <TextBlock Text="Port" FontSize="13" FontWeight="SemiBold"
                               Foreground="{StaticResource PrimaryTextBrush}" VerticalAlignment="Center"
                               Margin="0,0,14,0" />
                    <Button Style="{StaticResource GhostButtonStyle}" Command="{Binding CheckPortCommand}"
                            DockPanel.Dock="Right" Padding="10,4" FontSize="11" Margin="6,0,0,0">
                        <TextBlock Text="Kontrol Et" />
                    </Button>
                    <Button DockPanel.Dock="Right" Command="{Binding SavePortCommand}"
                            Background="Transparent" BorderThickness="0" Padding="0" Cursor="Hand" Margin="10,0,0,0">
                        <TextBlock Text="Kaydet" FontSize="11.5" FontWeight="Medium"
                                   Foreground="{StaticResource PrimaryBrush}" VerticalAlignment="Center" />
                    </Button>
                    <TextBox Text="{Binding Port, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource InputTextBoxStyle}" FontSize="11.5"
                             Padding="8,5" BorderThickness="0" Width="100" HorizontalAlignment="Left" />
                </DockPanel>
            </Border>

            <!-- Installed Versions -->
            <Border Style="{StaticResource CardStyle}" Padding="14,12">
                <StackPanel>
                    <DockPanel Margin="0,0,0,10">
                        <materialDesign:PackIcon Kind="PackageVariantClosed" Width="15" Height="15"
                                                 Foreground="{StaticResource PrimaryBrush}" Margin="0,0,8,0"
                                                 VerticalAlignment="Center" />
                        <TextBlock Text="Y&#252;kl&#252; S&#252;r&#252;mler" FontSize="13" FontWeight="SemiBold"
                                   Foreground="{StaticResource PrimaryTextBrush}" VerticalAlignment="Center" />
                    </DockPanel>
                    <ItemsControl ItemsSource="{Binding InstalledVersions}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource InputBackgroundBrush}" CornerRadius="8"
                                        Padding="12,8" Margin="0,2">
                                    <DockPanel>
                                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center" Margin="8,0,0,0">
                                            <!-- Sil button (hidden for active version) -->
                                            <Button Style="{StaticResource DangerButtonStyle}"
                                                    Command="{Binding DataContext.DeleteVersionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}" Padding="10,4" FontSize="11" Margin="0,0,6,0">
                                                <Button.Visibility>
                                                    <Binding Path="IsActive" Converter="{StaticResource InverseBoolToVisibilityConverter}" />
                                                </Button.Visibility>
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="DeleteOutline" Width="13" Height="13" Margin="0,0,4,0" VerticalAlignment="Center" />
                                                    <TextBlock Text="Sil" VerticalAlignment="Center" />
                                                </StackPanel>
                                            </Button>
                                            <Button Content="Etkinle&#351;tir" Style="{StaticResource SoftButtonStyle}"
                                                    Command="{Binding DataContext.SetActiveVersionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}" Padding="12,4" FontSize="11" />
                                        </StackPanel>
                                        <StackPanel VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Version}" Foreground="{StaticResource PrimaryTextBrush}"
                                                           FontWeight="SemiBold" FontSize="12.5" />
                                                <Border Margin="8,0,0,0" CornerRadius="4" Padding="6,1" VerticalAlignment="Center"
                                                        Visibility="{Binding IsActive, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Background" Value="{StaticResource SuccessLightBrush}" />
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock Text="Aktif" FontSize="9.5" FontWeight="Medium" Foreground="{StaticResource SuccessBrush}" />
                                                </Border>
                                            </StackPanel>
                                            <TextBlock Foreground="{StaticResource MutedTextBrush}" FontSize="10.5" Margin="0,2,0,0">
                                                <Run Text="{Binding VsVersion, Mode=OneWay}" />
                                                <Run Text=" &#183; " />
                                                <Run Text="{Binding InstalledAt, StringFormat='{}{0:yyyy-MM-dd}', Mode=OneWay}" />
                                            </TextBlock>
                                        </StackPanel>
                                    </DockPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <TextBlock Text="Hen&#252;z s&#252;r&#252;m y&#252;klenmemi&#351;" Foreground="{StaticResource MutedTextBrush}"
                               FontSize="11.5" Margin="0,4,0,0"
                               Visibility="{Binding InstalledVersions.Count, Converter={StaticResource InverseBoolConverter}}" />
                </StackPanel>
            </Border>

            <!-- Available Versions -->
            <Border Style="{StaticResource CardStyle}" Padding="14,12">
                <StackPanel>
                    <DockPanel Margin="0,0,0,10">
                        <materialDesign:PackIcon Kind="CloudDownload" Width="15" Height="15"
                                                 Foreground="{StaticResource PrimaryBrush}" Margin="0,0,8,0"
                                                 VerticalAlignment="Center" />
                        <TextBlock Text="Kullan&#305;labilir S&#252;r&#252;mler" FontSize="13" FontWeight="SemiBold"
                                   Foreground="{StaticResource PrimaryTextBrush}" VerticalAlignment="Center" />
                        <Button DockPanel.Dock="Right" HorizontalAlignment="Right"
                                Command="{Binding FetchAvailableVersionsCommand}"
                                IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"
                                Background="Transparent" BorderThickness="0" Padding="0" Cursor="Hand">
                            <TextBlock Text="S&#252;r&#252;mleri Getir" FontSize="11.5" FontWeight="Medium"
                                       Foreground="{StaticResource PrimaryBrush}" />
                        </Button>
                    </DockPanel>
                    <ItemsControl ItemsSource="{Binding AvailableVersions}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource InputBackgroundBrush}" CornerRadius="8"
                                        Padding="12,8" Margin="0,2">
                                    <DockPanel>
                                        <!-- İndir button (hidden when installed) -->
                                        <Button Content="&#304;ndir" Style="{StaticResource SuccessButtonStyle}"
                                                Command="{Binding DataContext.DownloadVersionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}" DockPanel.Dock="Right"
                                                Padding="12,4" FontSize="11">
                                            <Button.Visibility>
                                                <Binding Path="IsInstalled" Converter="{StaticResource InverseBoolToVisibilityConverter}" />
                                            </Button.Visibility>
                                        </Button>
                                        <!-- Yüklü badge (shown when installed) -->
                                        <Border DockPanel.Dock="Right" CornerRadius="6" Padding="10,4"
                                                Background="{StaticResource SuccessLightBrush}" VerticalAlignment="Center"
                                                Visibility="{Binding IsInstalled, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="Check" Width="12" Height="12"
                                                                         Foreground="{StaticResource SuccessBrush}"
                                                                         VerticalAlignment="Center" Margin="0,0,4,0" />
                                                <TextBlock Text="Y&#252;kl&#252;" FontSize="10.5" FontWeight="Medium"
                                                           Foreground="{StaticResource SuccessBrush}" VerticalAlignment="Center" />
                                            </StackPanel>
                                        </Border>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Version}" Foreground="{StaticResource PrimaryTextBrush}"
                                                       FontWeight="SemiBold" FontSize="12.5" />
                                            <TextBlock Foreground="{StaticResource MutedTextBrush}" FontSize="10.5" Margin="0,2,0,0">
                                                <Run Text="{Binding VsVersion, Mode=OneWay}" />
                                                <Run Text=" &#183; " />
                                                <Run Text="{Binding Architecture, Mode=OneWay}" />
                                            </TextBlock>
                                        </StackPanel>
                                    </DockPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Download Progress -->
            <Border Style="{StaticResource CardStyle}" Padding="14,10"
                    Visibility="{Binding IsDownloading, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel>
                    <TextBlock Text="{Binding DownloadStatus}" Foreground="{StaticResource PrimaryTextBrush}"
                               FontSize="12" FontWeight="Medium" />
                    <ProgressBar Value="{Binding DownloadProgress}" Maximum="100" Height="6" Margin="0,8,0,0"
                                 Background="{StaticResource InputBackgroundBrush}" Foreground="{StaticResource PrimaryBrush}" />
                </StackPanel>
            </Border>

            <!-- Status Message -->
            <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource MutedTextBrush}"
                       Margin="2,2,0,0" FontSize="11.5" />
        </StackPanel>
    </ScrollViewer>
</UserControl>
