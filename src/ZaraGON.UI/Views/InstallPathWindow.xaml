<Window x:Class="ZaraGON.UI.Views.InstallPathWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="ZaraGON - Kurulum Dizini"
        Height="520" Width="540"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        UseLayoutRounding="True">

    <Border Background="{StaticResource CardBackgroundBrush}" CornerRadius="16"
            BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
            SnapsToDevicePixels="True">
        <Border.Clip>
            <RectangleGeometry RadiusX="16" RadiusY="16" Rect="0,0,540,520" />
        </Border.Clip>
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="3" Opacity="0.18" Color="#000000" />
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Top accent bar -->
            <Border Grid.Row="0" CornerRadius="16,16,0,0" Height="4">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#2196F3" Offset="0" />
                        <GradientStop Color="#42A5F5" Offset="0.5" />
                        <GradientStop Color="#64B5F6" Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>
            </Border>

            <!-- Main content -->
            <Grid Grid.Row="1" Margin="44,28,44,32">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Logo + Title -->
                <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,24">
                    <Image Source="/Resources/app.png" Width="56" Height="56"
                           RenderOptions.BitmapScalingMode="HighQuality"
                           HorizontalAlignment="Center" Margin="0,0,0,10" />
                    <TextBlock Text="ZaraGON" FontSize="24" FontWeight="SemiBold"
                               Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Center" />
                    <TextBlock Text="Kurulum dizinini seçin"
                               FontSize="13" Foreground="{StaticResource SecondaryTextBrush}"
                               HorizontalAlignment="Center" Margin="0,4,0,0" />
                </StackPanel>

                <!-- Separator -->
                <Border Grid.Row="1" Height="1" Background="{StaticResource BorderBrush}"
                        Margin="0,0,0,24" Opacity="0.5" />

                <!-- Path selection -->
                <StackPanel Grid.Row="2" Margin="0,0,0,12">
                    <TextBlock Text="Kurulum Dizini" FontSize="12" FontWeight="Medium"
                               Foreground="{StaticResource PrimaryTextBrush}" Margin="0,0,0,8" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="PathTextBox" Grid.Column="0"
                                 Text="C:\ZaraGON"
                                 FontSize="13" Padding="10,8"
                                 Background="{StaticResource InputBackgroundBrush}"
                                 Foreground="{StaticResource PrimaryTextBrush}"
                                 BorderBrush="{StaticResource BorderBrush}"
                                 BorderThickness="1" VerticalContentAlignment="Center">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6,0,0,6" />
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        <Button x:Name="BrowseButton" Grid.Column="1"
                                Click="BrowseButton_Click"
                                Padding="14,8" Cursor="Hand"
                                Background="{StaticResource PrimaryBrush}"
                                Foreground="White" FontSize="12" FontWeight="Medium"
                                BorderThickness="0">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="0,6,6,0" Padding="{TemplateBinding Padding}"
                                            Cursor="Hand">
                                        <StackPanel Orientation="Horizontal">
                                            <md:PackIcon Kind="FolderOpen" Width="16" Height="16"
                                                         VerticalAlignment="Center" Margin="0,0,6,0" />
                                            <ContentPresenter VerticalAlignment="Center" />
                                        </StackPanel>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <TextBlock Text="Gözat" />
                        </Button>
                    </Grid>
                </StackPanel>

                <!-- Info text -->
                <StackPanel Grid.Row="3" Margin="0,4,0,0">
                    <TextBlock x:Name="ErrorText" Text="" FontSize="11"
                               Foreground="{StaticResource ErrorBrush}"
                               TextWrapping="Wrap" Visibility="Collapsed" Margin="0,0,0,8" />

                    <Border Background="{StaticResource InputBackgroundBrush}"
                            CornerRadius="8" Padding="14,12">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                <md:PackIcon Kind="InformationOutline" Width="14" Height="14"
                                             Foreground="{StaticResource PrimaryBrush}"
                                             VerticalAlignment="Center" Margin="0,0,6,0" />
                                <TextBlock Text="Kurulum Bilgisi" FontSize="12" FontWeight="Medium"
                                           Foreground="{StaticResource PrimaryTextBrush}" />
                            </StackPanel>
                            <TextBlock FontSize="11" Foreground="{StaticResource SecondaryTextBrush}"
                                       TextWrapping="Wrap" LineHeight="18">
                                <Run Text="• Apache, PHP ve MariaDB bu dizine kurulacaktır" />
                                <LineBreak />
                                <Run Text="• Projeleriniz bu dizindeki" />
                                <Run Text=" www " FontWeight="SemiBold" />
                                <Run Text="klasöründe yer alacaktır" />
                                <LineBreak />
                                <Run Text="• Dizin mevcut değilse otomatik oluşturulacaktır" />
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Separator -->
                <Border Grid.Row="5" Height="1" Background="{StaticResource BorderBrush}"
                        Margin="0,12,0,8" Opacity="0.5" />

                <!-- Hint: sonraki adım -->
                <TextBlock Grid.Row="6" Text="İleri'ye tıklayın — ardından Apache, PHP ve MariaDB indirilecek."
                           FontSize="11" Foreground="{StaticResource MutedTextBrush}"
                           HorizontalAlignment="Center" Margin="0,0,0,14" />

                <!-- Buttons (XAMPP tarzi: Ileri / Iptal) -->
                <Grid Grid.Row="7">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Button x:Name="CancelButton" Grid.Column="1"
                            Content="İptal" Click="CancelButton_Click"
                            Style="{StaticResource GhostButtonStyle}"
                            Padding="28,12" Margin="0,0,12,0" FontSize="14" />

                    <Button x:Name="StartButton" Grid.Column="2"
                            Click="StartButton_Click"
                            Style="{StaticResource SuccessButtonStyle}"
                            Padding="28,12" FontSize="14" FontWeight="SemiBold">
                        <StackPanel Orientation="Horizontal">
                            <md:PackIcon Kind="ArrowRight" Width="18" Height="18"
                                         VerticalAlignment="Center" Margin="0,0,8,0" />
                            <TextBlock Text="İleri" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
