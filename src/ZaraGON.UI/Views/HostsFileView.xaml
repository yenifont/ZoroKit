<UserControl x:Class="ZaraGON.UI.Views.HostsFileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0">
        <StackPanel Margin="24,20,24,24">
            <!-- Page Header -->
            <TextBlock Text="Hosts Dosyas&#305;" Style="{StaticResource PageTitleStyle}" />
            <TextBlock Text="Yerel DNS kay&#305;tlar&#305;n&#305; y&#246;netin" Style="{StaticResource PageSubtitleStyle}" />

            <!-- Admin Warning -->
            <Border Style="{StaticResource CardStyle}" Padding="12,10"
                    Background="{StaticResource WarningLightBrush}" BorderBrush="#FCD34D"
                    Visibility="{Binding RequiresElevation, Converter={StaticResource BooleanToVisibilityConverter}}">
                <DockPanel>
                    <materialDesign:PackIcon Kind="ShieldAlert" Width="15" Height="15"
                                             Foreground="{StaticResource WarningBrush}" Margin="0,0,8,0" VerticalAlignment="Center" />
                    <TextBlock Text="Hosts dosyas&#305;n&#305; d&#252;zenlemek i&#231;in y&#246;netici yetkisi gereklidir."
                               Foreground="#92400E" FontWeight="Medium" FontSize="11.5" VerticalAlignment="Center" />
                </DockPanel>
            </Border>

            <!-- Add Entry -->
            <Border Style="{StaticResource CardStyle}" Padding="14,12">
                <StackPanel>
                    <DockPanel Margin="0,0,0,10">
                        <materialDesign:PackIcon Kind="PlusCircleOutline" Width="15" Height="15"
                                                 Foreground="{StaticResource SuccessBrush}" Margin="0,0,8,0"
                                                 VerticalAlignment="Center" />
                        <TextBlock Text="Yeni Kay&#305;t Ekle" FontSize="13" FontWeight="SemiBold"
                                   Foreground="{StaticResource PrimaryTextBrush}" VerticalAlignment="Center" />
                    </DockPanel>
                    <DockPanel>
                        <Button Content="Ekle" Style="{StaticResource SuccessButtonStyle}"
                                Command="{Binding AddEntryCommand}" DockPanel.Dock="Right"
                                Margin="10,0,0,0" Padding="14,5" FontSize="11.5" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="140" />
                                <ColumnDefinition Width="16" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="IP" Grid.Column="0" Foreground="{StaticResource SecondaryTextBrush}"
                                       VerticalAlignment="Center" Margin="0,0,8,0" FontSize="11.5" />
                            <TextBox Text="{Binding NewIpAddress, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1"
                                     Style="{StaticResource InputTextBoxStyle}" FontSize="11.5"
                                     Padding="8,5" BorderThickness="0" />
                            <TextBlock Text="Hostname" Grid.Column="3" Foreground="{StaticResource SecondaryTextBrush}"
                                       VerticalAlignment="Center" Margin="0,0,8,0" FontSize="11.5" />
                            <TextBox Text="{Binding NewHostname, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="4"
                                     Style="{StaticResource InputTextBoxStyle}" FontSize="11.5"
                                     Padding="8,5" BorderThickness="0" />
                        </Grid>
                    </DockPanel>
                </StackPanel>
            </Border>

            <!-- Managed Entries -->
            <Border Style="{StaticResource CardStyle}" Padding="14,12">
                <StackPanel>
                    <DockPanel Margin="0,0,0,10">
                        <materialDesign:PackIcon Kind="FormatListBulleted" Width="15" Height="15"
                                                 Foreground="{StaticResource PrimaryBrush}" Margin="0,0,8,0"
                                                 VerticalAlignment="Center" />
                        <TextBlock Text="Y&#246;netilen Kay&#305;tlar" FontSize="13" FontWeight="SemiBold"
                                   Foreground="{StaticResource PrimaryTextBrush}" VerticalAlignment="Center" />
                    </DockPanel>
                    <ItemsControl ItemsSource="{Binding Entries}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource InputBackgroundBrush}" CornerRadius="8"
                                        Padding="12,8" Margin="0,2">
                                    <DockPanel>
                                        <Button Content="Kald&#305;r" Style="{StaticResource DangerButtonStyle}"
                                                Command="{Binding DataContext.RemoveEntryCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}" DockPanel.Dock="Right"
                                                Padding="12,4" FontSize="11" />
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <Border Background="{StaticResource CardBackgroundBrush}" CornerRadius="5"
                                                    Padding="8,3" Margin="0,0,8,0">
                                                <TextBlock Text="{Binding IpAddress}" Foreground="{StaticResource SecondaryTextBrush}"
                                                           FontSize="11.5" FontFamily="Consolas" />
                                            </Border>
                                            <materialDesign:PackIcon Kind="ArrowRight" Width="12" Height="12"
                                                                     Foreground="{StaticResource MutedTextBrush}" Margin="0,0,8,0"
                                                                     VerticalAlignment="Center" />
                                            <TextBlock Text="{Binding Hostname}" Foreground="{StaticResource PrimaryTextBrush}"
                                                       FontWeight="SemiBold" FontSize="12.5" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </DockPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <TextBlock Text="Hen&#252;z kay&#305;t eklenmemi&#351;" Foreground="{StaticResource MutedTextBrush}"
                               FontSize="11.5" Margin="0,4,0,0" />
                </StackPanel>
            </Border>

            <!-- Status Message -->
            <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource MutedTextBrush}"
                       Margin="2,2,0,0" FontSize="11.5" />
        </StackPanel>
    </ScrollViewer>
</UserControl>
