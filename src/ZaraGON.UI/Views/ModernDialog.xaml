<Window x:Class="ZaraGON.UI.Views.ModernDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None" AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        SizeToContent="Height"
        Width="420"
        ShowInTaskbar="False">

    <Border Background="White" CornerRadius="12" Margin="16"
            BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="24" ShadowDepth="4" Opacity="0.18" Color="#000000" />
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Header area with icon and title -->
            <DockPanel Grid.Row="0" Margin="24,22,24,0">
                <Border x:Name="IconBorder" Width="40" Height="40" CornerRadius="10"
                        Margin="0,0,14,0" VerticalAlignment="Top">
                    <materialDesign:PackIcon x:Name="DialogIcon" Width="20" Height="20"
                                             HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Border>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock x:Name="TitleText" FontSize="15" FontWeight="SemiBold"
                               Foreground="{StaticResource PrimaryTextBrush}" TextWrapping="Wrap" />
                </StackPanel>
            </DockPanel>

            <!-- Message -->
            <TextBlock x:Name="MessageText" Grid.Row="1" Margin="24,14,24,0"
                       FontSize="13" Foreground="{StaticResource SecondaryTextBrush}"
                       TextWrapping="Wrap" LineHeight="20" />

            <!-- Input (hidden by default, shown for prompt mode) -->
            <TextBox x:Name="InputBox" Grid.Row="1" Margin="24,14,24,0"
                     Visibility="Collapsed"
                     Style="{StaticResource InputTextBoxStyle}" FontSize="13"
                     Padding="10,8" BorderThickness="0" />

            <!-- Buttons -->
            <StackPanel x:Name="ButtonPanel" Grid.Row="2" Orientation="Horizontal"
                        HorizontalAlignment="Right" Margin="24,20,24,20">
                <Button x:Name="CancelButton" Visibility="Collapsed"
                        Style="{StaticResource GhostButtonStyle}"
                        Padding="16,7" FontSize="12.5" Margin="0,0,8,0"
                        Click="CancelButton_Click" />
                <Button x:Name="OkButton"
                        Padding="16,7" FontSize="12.5"
                        Click="OkButton_Click" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
