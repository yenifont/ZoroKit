<Window x:Class="ZoroKit.UI.Views.DatabaseSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None" AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        SizeToContent="Height"
        Width="420"
        ShowInTaskbar="False">

    <Border Background="White" CornerRadius="12" Margin="16"
            BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="24" ShadowDepth="4" Opacity="0.18" Color="#000000" />
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <DockPanel Grid.Row="0" Margin="24,22,24,0">
                <Border Width="40" Height="40" CornerRadius="10"
                        Background="#FFF7ED" Margin="0,0,14,0" VerticalAlignment="Top">
                    <materialDesign:PackIcon Kind="Database" Width="20" Height="20"
                                             Foreground="#EA580C"
                                             HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Border>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock x:Name="TitleText" FontSize="15" FontWeight="SemiBold"
                               Foreground="{StaticResource PrimaryTextBrush}" TextWrapping="Wrap" />
                    <TextBlock x:Name="SubtitleText" FontSize="11.5"
                               Foreground="{StaticResource MutedTextBrush}" Margin="0,2,0,0" />
                </StackPanel>
            </DockPanel>

            <!-- Select All (backup mode only) -->
            <CheckBox x:Name="SelectAllCheckBox" Grid.Row="1" Margin="24,14,24,0"
                      Content="T&#252;m&#252;n&#252; Se&#231;" FontSize="12.5" FontWeight="Medium"
                      Foreground="{StaticResource PrimaryTextBrush}"
                      Visibility="Collapsed"
                      Checked="SelectAll_Checked" Unchecked="SelectAll_Unchecked" />

            <!-- Database List -->
            <Border Grid.Row="2" Margin="24,10,24,0" Background="{StaticResource InputBackgroundBrush}"
                    CornerRadius="8" MaxHeight="280">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0">
                    <StackPanel x:Name="DatabaseListPanel" Margin="4,4,4,4" />
                </ScrollViewer>
            </Border>

            <!-- Buttons -->
            <StackPanel Grid.Row="3" Orientation="Horizontal"
                        HorizontalAlignment="Right" Margin="24,20,24,20">
                <Button x:Name="CancelButton"
                        Style="{StaticResource GhostButtonStyle}"
                        Content="&#304;ptal"
                        Padding="16,7" FontSize="12.5" Margin="0,0,8,0"
                        Click="CancelButton_Click" />
                <Button x:Name="OkButton"
                        Padding="16,7" FontSize="12.5"
                        Click="OkButton_Click" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
